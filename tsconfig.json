{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "noEmit": true,
    "noImplicitAny": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "strictNullChecks": false,
    "skipLibCheck": false,
    "lib": [
      "es2015",
      "es2016",
      "es2017",
      "dom"
    ],
    "types": [
      "jasmine",
      "node"
    ]
  },
  "exclude": [
    "node_modules",
    "dist",
    "compiled",
  ],
  "compileOnSave": false,
  "buildOnSave": false
}
